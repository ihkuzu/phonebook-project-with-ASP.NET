@model IEnumerable<TelRehber.Models.Bilgiler>

@{
    ViewData["Title"] = "Rehber";
}

<h1>Rehber</h1>

<p>
    <a asp-action="Create">Yeni Kişi Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SOYAD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NUMARA)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SOYAD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NUMARA)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
